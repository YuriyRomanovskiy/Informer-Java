<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brand.informer.DetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TableRow>
                <ImageView
                    android:id="@+id/detailImage2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/abs1"
                    />
                <TableLayout
                    android:layout_height="wrap_content">
                    <TableRow>
                        <TextView
                            android:id="@+id/detailName"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="name"/>
                    </TableRow>
                    <TableRow
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/detailDesc"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="short descr"/>
                    </TableRow>
                </TableLayout>
            </TableRow>
            <TextView
                android:id="@+id/detailFullDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="full Descffull Descfull Descfull Descfull Descfull Descfull Descfull Descfull Descfull Descfull Descfull Descfull Descfull Descfull Descull full Descfull Descfull Descfull Desc Desc"
                />
            <TextView
                android:id="@+id/detailLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="link"
                android:textColor="#0040ff"/>
        </TableLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
